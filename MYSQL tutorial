-- Following Fireship tutorial to create a table in a database:

-- @block
CREATE TABLE Users (
    id INT PRIMARY KEY AUTO_INCREMENT,
    email VARCHAR (255) NOT NULL UNIQUE,
    bio TEXT,
    country VARCHAR(2)
);

-- @block
INSERT INTO users (email, bio, country)
VALUES (
    'hello@world.com',
    'i love pizza!',
    'US'
);

-- Multiple Values
INSERT INTO users (email, bio, country)
VALUES ('oi@mundo.com', 'eu amo pizza!', 'BR'),
       ('hola@munda.com', 'me encanta la pizza!', 'MX');
